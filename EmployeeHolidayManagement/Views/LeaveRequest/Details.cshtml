@model EmployeeHolidayManagement.Models.LeaveRequestVm

@{
    ViewData["Title"] = "Details";
}
@if (Model.Approved == true)
{
    <div class="alert alert-success" role="alert">
        <h1>
            Review Leave Request for @Model.RequestingEmployee.FirstName @Model.RequestingEmployee.LastName has already been Approved
            by @Model.ApprovedBy.FirstName @Model.ApprovedBy.LastName
        </h1>
        <h4>@Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)</h4>
    </div>

}
else if (Model.Approved == false)
{
<div class="alert alert-danger" role="alert">
    <h1>
        Review Leave Request for @Model.RequestingEmployee.FirstName @Model.RequestingEmployee.LastName has already been Rejected
        by @Model.ApprovedBy.FirstName @Model.ApprovedBy.LastName
    </h1>
    <h4>@Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)</h4>
</div>

}
else
{

        <h1>Review Leave Request for @Model.RequestingEmployee.FirstName @Model.RequestingEmployee.LastName</h1>
        <h4>@Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)</h4>
    
}





        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.RequestingEmployee)
                </dt>
                <dd class="col-sm-10">
                    @Model.RequestingEmployee.FirstName @Model.RequestingEmployee.LastName
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EndDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LeaveType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LeaveType.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.RequestComments)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RequestComments)
                </dd>
            </dl>
        </div>
        <div>
            @if (Model.Approved == null)
            {
                <a class="btn btn-success" asp-action="ApproveRequest" asp-route-id="@Model.Id"><i class="fas fa-check"></i> Approve</a>
                <a class="btn btn-danger" asp-action="RejectRequest" asp-route-id="@Model.Id"><i class="fas fa-times"></i> Reject</a>
            }
            <a class="btn btn-outline-secondary" asp-action="Index"><i class="fa fa-arrow-left"></i> Back to List</a>
        </div>
