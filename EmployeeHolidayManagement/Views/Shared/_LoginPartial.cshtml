@using Microsoft.AspNetCore.Identity
@using EmployeeHolidayManagement.Data
@inject SignInManager<Employee> SignInManager
@inject UserManager<Employee> UserManager

<ul class="nav nav-pills nav-sidebar flex-column">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        <i class="fas fa-user-alt"></i>
        <p>@User.Identity.Name</p>
        </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-white">
                <i class="fas fa-sign-out-alt"></i>
                <p>Logout</p>
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">
            <i class="fas fa-registered"></i>
             <p> Register</p>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-user"></i>
             <p> Login</p>
        </a>
    </li>
}
</ul>
